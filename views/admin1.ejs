<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/admin_func" method="POST">
       
        Book Name:<input type="text" name="add_book"><br>
        Number   :<input type="text" name="number"><br>
        <input type="submit" value="Add Book">
    <h1>List of books</h1>
    <h3>press on a book name to remove it from the library</h3>
    <table>
        <tr>
            <th>Number of Books</th>
            <th>Books</th>
        </tr>
            
        <%
            data4.forEach(function(item) {
        %>    
      
       <tr>
           
           <td><%=item.number%></td>
           <td><input type="submit" name="delete" value="<%=item.name%>"></td>
           
           
       </tr>
       <% }) %>
    </table>
    <h1>Pending Requests</h1>
    <table>
        <tr>
            <th>Accept Request</th>
            <th>Deny Request</th>
            <th>User</th>
            
        </tr>
        <%
            data2.forEach(function(item2) {
        %>    
       
       <tr>
           <td><input type="submit" name="nameA" value="<%=item2.name%>"></td>
           <td><input type="submit" name="nameD" value="<%=item2.name%>"></td>  
           <td><%=item2.username%></td>
       </tr>
       <% }) %>
    </table>
    <h1>Accepted Requests</h1>
    <table>
        <tr>
            <th>Book</th>
            <th>User</th>
        </tr>
        <%
            data3.forEach(function(item3) {
        %>    
       
        
       <tr>
           <td><%=item3.name%></td>
           <td><%=item3.username%></td>
       </tr>
       <% }) %>
    </table>

    </form>

    <form action="/index" method="GET">
    <input type="submit" name="logout" value="Logout">
    </form>

</body>
</html>